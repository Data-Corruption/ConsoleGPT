{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "moduleResolution":"node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./bin",
    "sourceMap": true,
  },
  "include": [ "src/*.ts" ]
}